<!DOCTYPE html>
<html lang="en">
<head>
    <title>Item Clone</title>
    <meta charset="UTF-8">
    <meta name="description" content="Item Clone">
    <meta name="author" content="Beren Scott">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
</head>
<body>
<nav class="topheading">
    <% if (user.itemR) {%><a href="/item/">New Items</a><%}%>
    <% if (user.locationR) {%><a href="/location/">Locations</a><%}%>
    <% if (user.jobR) {%><a href="/job/">Jobs</a><%}%>
    <% if (user.itemR) {%><a href="/report/find">Find Items</a><%}%>
    <% if (user.wipeR) {%><a href="/wipe/status">Wipe</a><%}%>
    <% if (user.admin) {%><a href="/price/">Pricing</a><%}%>
    <% if (user.admin) {%><a href="/user/">User</a><%}%>
    <% if (user.admin) {%><a href="/admin/">Admin</a><%}%>
    <a href="/logout">Logout</a>
</nav>
<div class="container">
    <img src="/bshw-big.png" alt="BSHW banner">
    <h1 style="text-align: center">Create: <%= itemType %></h1>
    <form action="/item/save" method="post" onsubmit="subbutton.disabled=true; return true;">
        <input type="hidden" name="itemType" value="<%= itemType%>"/>
        <input type="hidden" name="fromId" value="<%= one.fromId._id %>"/>
        <table class="list-table">
            <thead>
            <tr>
                <th>Ref ID</th>
                <th>Customer</th>
                <th>Received</th>
                <th>Completed</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td><%= one.fromId.fromBarcode %></td>
                <td><%= one.fromId.businessName %></td>
                <td><%= one.fromId.collectionDate %></td>
                <td><% if(one.completed) { %><%= one.completionDate.toLocaleString()%><%} else {%>In progress<%}%></td>
            </tr>
            <tr>
                <td colspan="2" style="text-align: right">Location</td>
                <td colspan="2">
                    <select name="locationId">
                        <% let unlocked = false;%>
                        <% for(let i=0;i<locations.length;i++){%>
                            <% if (!locations[i].locked) {%>
                                <% unlocked = true;%>
                                <% if (locations[i].id==one.locationId._id) { %>
                        <option value="<%=locations[i].id%>" selected="selected"><%=locations[i].locate%></option>
                                <% } else { %>
                        <option value="<%=locations[i].id%>"><%=locations[i].locate%></option>
                                <%}%>
                            <%}%>
                        <%}%>
                    </select>
                    <% if(!unlocked) { %>No unlocked locations found<% } %>
                </td>
            </tr>
            <% identList.eachPath((pathname, schematype) => { %>
                <% if (schematype.instance=='String') { %>
                    <tr>
                        <td colspan="2" style="text-align: right"><%= pathname.slice(pathname.lastIndexOf('.')+1)%></td>
                        <% if (['idBarcode','serial','assetTag'].includes(pathname.slice(pathname.lastIndexOf('.')+1))) { %>
                        <td colspan="2"><input type="text" name="<%= pathname%>"<% if (pathname.slice(pathname.lastIndexOf('.')+1)=='idBarcode') {%> autofocus<%}%> /></td>
                        <% } else { %>
                            <td colspan="2"><input type="text" name="<%= pathname%>" value="<%= one.get(pathname) %>" /></td>
                        <%}%>
                    </tr>
                <%}%>
            <% }) %>
            <% specList.eachPath((pathname, schematype) => { %>
                <% if (schematype.instance=='String') { %>
                    <tr>
                        <td colspan="2" style="text-align: right"><%= pathname.slice(pathname.lastIndexOf('.')+1)%></td>
                        <td colspan="2"><input type="text" name="<%= pathname%>" value="<%= one.get(pathname)%>"/></td>
                    </tr>
                <%}%>
            <% }) %>
            <% if (enums) { %>
                <% enumsList.eachPath((pathname, schematype) => { %>
                    <% if (schematype.instance=='String') { %>
                        <tr>
                            <td colspan="2" style="text-align: right"><%= pathname.slice(pathname.lastIndexOf('.')+1)%></td>
                            <td colspan="2">
                                <select name="<%= pathname%>">
                                    <% fullSchema.path(pathname).options.enum.forEach(options => { %>
                                    <% if (options==one.get(pathname)) {%>
                                        <option value="<%= options%>" selected="selected"><%= options%></option>
                                        <%} else {%>
                                            <option value="<%= options%>"><%= options%></option>
                                        <%}%>
                                    <% }) %>
                                </select>
                            </td>
                        </tr>
                    <%}%>
                <% }) %>
            <%}%>
            <tr>
                <td colspan="2" style="text-align: right">cosmeticCondition</td>
                <td colspan="2">
                    <select name="cosmeticCondition">
                        <% fullSchema.path('cosmeticCondition').options.enum.forEach(options => { %>
                        <% if (one.cosmeticCondition==options) {%>
                            <option value="<%= options%>" selected="selected"><%= options%></option>
                            <% } else { %>
                                <option value="<%= options%>"><%= options%></option>
                            <% } %>
                        <% }) %>
                    </select>
                </td>
            </tr>
            <% faultList.eachPath((pathname, schematype) => { %>
                <% if (schematype.instance=='Boolean') { %>
                    <tr>
                        <input type="hidden" name="<%= pathname%>" value="false"/>
                        <td colspan="2" style="text-align: right"><%= pathname.slice(pathname.lastIndexOf('.')+1)%></td>
                        <% if (one.get(pathname)) { %>
                            <td colspan="2"><input type="checkbox" name="<%= pathname%>" value="true" checked="checked"></td>
                        <% } else { %>
                            <td colspan="2"><input type="checkbox" name="<%= pathname%>" value="true"></td>
                        <% } %>
                    </tr>
                <%}%>
            <% }) %>
            <% globalFaults.eachPath((pathname, schematype) => { %>
                <% if (schematype.instance=='Boolean') { %>
                    <tr>
                        <input type="hidden" name="<%= pathname%>" value="false"/>
                        <td colspan="2" style="text-align: right"><%= pathname.slice(pathname.lastIndexOf('.')+1)%></td>
                        <% if (one.get(pathname)) { %>
                            <td colspan="2"><input type="checkbox" name="<%= pathname%>" value="true" checked="checked"></td>
                        <% } else { %>
                            <td colspan="2"><input type="checkbox" name="<%= pathname%>" value="true"></td>
                        <% } %>
                    </tr>
                <%}%>
            <% }) %>
            <tr>
                <% if (unlocked) {%>
                <td colspan="4"><button id="subbutton" type="submit">Clone</button></td>
                <% } %>
            </tr>
            </tbody>
        </table>
    </form>
</div>
</body>
</html>